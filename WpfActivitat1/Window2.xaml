<Window x:Class="WpfActivitat1.Window2"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfActivitat1"
        mc:Ignorable="d"
        Title="Exercici 2" Height="225" Width="500">
    <Grid Margin="0,0,2,4">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="46*"/>
            <ColumnDefinition Width="507*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="txt_nombre" HorizontalAlignment="Left" Height="23" Margin="171,72,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="134" Grid.Column="1" TextChanged="Txt_nombre_TextChanged" TabIndex="1"/>
        <TextBox x:Name="txt_resultado" HorizontalAlignment="Left" Height="22" Margin="171,130,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="228" Grid.Column="1" IsEnabled="False" TextChanged="Txt_resultado_TextChanged"/>
        <Label x:Name="lbl_entrarnombre" Content="Entra un nombre:" HorizontalAlignment="Left" Margin="27,69,0,0" VerticalAlignment="Top" Width="114" Grid.Column="1"/>
        <Button x:Name="button" Content="Calcula" Grid.Column="1" HorizontalAlignment="Left" Margin="324,75,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="-0.24,1.15" Click="Button_Click"/>

    </Grid>
</Window>


<Window x:Class="SQLiteExampleV2.View.WindowAfegirTasca"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SQLiteExampleV2.View"
        mc:Ignorable="d"
        Title="Modificar Responsable" Height="400" Width="300">
    <Grid Margin="0,0,0,-6">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Content="Codi:" Grid.Row="0" Grid.Column="0" Margin="0,0,10,5"/>
        <TextBlock Name="Codi" Grid.Row="0" Grid.Column="1" Text="{Binding Codi}" Margin="28,0,34,10" ></TextBlock>

        <Label Content="Nom:" Grid.Row="1" Grid.Column="0" Margin="0,0,0,26" Grid.RowSpan="2"></Label>
        <TextBox Name="Nom" Grid.Column="1" Text="{Binding Nom}" Grid.Row="1"/>

        <Label Content="Descripcio:" Grid.Row="2" Grid.Column="0" Margin="0,0,0,26" Grid.RowSpan="2"></Label>
        <TextBox Name="Descripcio" Grid.Row="2" Grid.Column="1" Text="{Binding Descripcio}" Margin="0,4,0,5"/>

        <Label Content="Responsable" HorizontalAlignment="Center" Grid.Row="3" VerticalAlignment="Top" Width="98" Margin="0,4,0,0"/>
        <TextBlock Name="Responsable" Grid.Column="1"   Grid.Row="3" Text="{Binding Responsable}" Margin="0,4,0,10" />

        <Label Content="Data Inici:" Grid.Row="5" Grid.Column="0" Margin="0,5,0,12"/>
        <DatePicker Name="Data_Inici" Grid.Row="5" Grid.Column="1" SelectedDate ="{Binding Data_Inici}" SelectedDateFormat="Short" Margin="5,8,34,40"/>

        <Label Content="Data_Final" HorizontalAlignment="Left" Grid.Row="4" VerticalAlignment="Top" Width="98" Grid.ColumnSpan="2" Margin="5,7,0,0"/>
        <DatePicker Name="Data_Final" Grid.Column="1" HorizontalAlignment="Center" SelectedDate ="{Binding Data_Final}" Grid.Row="4" SelectedDateFormat="Short" Margin="0,13,0,23" Width="182"/>

        <Button Name="btnUpdate" Content="Desar" Grid.Row="6" Grid.Column="1" Margin="28,20,34,78" Click="btnUpdate_Click2"/>





    </Grid>
</Window>
